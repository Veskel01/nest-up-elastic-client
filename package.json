{
  "name": "@nest-up/elastic-client",
  "version": "0.1.4",
  "description": "Custom package for the Nest.JS framework to work with Elasticsearch",
  "author": "Jakub Andrzejewski",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "keywords": [
    "nestjs",
    "elasticsearch",
    "elastic",
    "elasticsearch-client",
    "search",
    "nestjs-elasticsearch"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "npm run prebuild && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "test:e2e:dev": "jest --config ./tests/jest-e2e.json --watch"
  },
  "devDependencies": {
    "@elastic/elasticsearch": "^8.2.1",
    "@nestjs/common": "^9.0.4",
    "@nestjs/core": "^9.0.4",
    "@nestjs/testing": "^9.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "28.1.4",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.1.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "@elastic/elasticsearch": "^7.4.0 || ^8.0.0",
    "@nestjs/common": "^8.0.0 || ^9.0.0",
    "@nestjs/core": "^8.0.0 || ^9.0.0",
    "fs-extra": "^10.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Veskel01/nestjs-elastic-client.git"
  },
  "homepage": "https://github.com/Veskel01/nestjs-elastic-client#readme",
  "bugs": {
    "url": "https://github.com/Veskel01/nestjs-elastic-client/issues"
  }
}
