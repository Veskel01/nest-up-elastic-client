{
  "name": "@nest-up/elastic-client",
  "version": "0.1.5",
  "description": "Custom package for the Nest.JS framework to work with Elasticsearch",
  "author": "Jakub Andrzejewski",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "keywords": [
    "nestjs",
    "elasticsearch",
    "elastic",
    "elasticsearch-client",
    "search",
    "nestjs-elasticsearch"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "npm run prebuild && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "test:e2e:dev": "jest --config ./tests/jest-e2e.json --watch"
  },
  "devDependencies": {
    "@elastic/elasticsearch": "8.4.0",
    "@nestjs/common": "9.1.2",
    "@nestjs/core": "9.1.2",
    "@nestjs/testing": "9.1.2",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "29.0.3",
    "@types/node": "16.11.62",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "fs-extra": "10.1.0",
    "jest": "29.0.3",
    "prettier": "2.7.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.7",
    "supertest": "6.2.4",
    "ts-jest": "29.0.2",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.3"
  },
  "peerDependencies": {
    "@elastic/elasticsearch": "^7.4.0 || ^8.0.0",
    "@nestjs/common": "^8.0.0 || ^9.0.0",
    "@nestjs/core": "^8.0.0 || ^9.0.0",
    "fs-extra": "^10.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Veskel01/nestjs-elastic-client.git"
  },
  "homepage": "https://github.com/Veskel01/nestjs-elastic-client#readme",
  "bugs": {
    "url": "https://github.com/Veskel01/nestjs-elastic-client/issues"
  }
}
